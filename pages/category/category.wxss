/* pages/category/category.wxss */
.main-container {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  color: #6d6d6d;
  overflow: hidden;
}
/* 分类列表 */
.categories_wrap {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 23.75%;
  background-color: #f8f8f8;
}
/* 大分类项目 */
.category-item {
  position: relative;
  box-sizing: border-box;
  line-height: 80rpx;
  height: 80rpx;
  color: #6d6d6d;
  border-bottom: 1px solid #e0e0e0;
  text-align: center;
  font-size: 24rpx;
}
.category-item .var{
  position: absolute;
  width: 0;
  height: 70rpx;
  left: 0;
  top: 5%;
  border-left: 8rpx solid;
  border-color: transparent;
}
.category-item .var.active{
  border-color: #ffd600;
}
/* 商品列表 */
.products-wrap-right {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #fff;
  left: 23.75%;
}
.products_container {
  position: absolute;
  left: 1.25%;
  top: 0;
  right: 0;
  bottom: 0;
}
.select_cids_wrap {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  border-bottom: 1px solid #e0e0e0;
  background-color: rgba(255,255,255,.95)
}
.select_cids_wrap view {
  float: left;
  width: 50%;
  text-align: center;
  font-size: 24rpx;
  position: relative;
  
}
.select_cids_wrap view::after{
  content: '';
  background-image: url("data:image/png;base64,");
  display: inline-block;
  width: 24rpx;
  height: 80rpx;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 20rpx;
  vertical-align: top;
  -webkit-transition: 0.5s ease;
  -o-transition: 0.5s ease;
  transition: 0.5s ease;
  -webkit-transform: rotate(0deg);
  -ms-transform: rotate(0deg);
  -o-transform: rotate(0deg);
  transform: rotate(0deg);
}
.select_cids_wrap view:nth-child(2):before{
  display: block;
  content: '';
  width: 1px;
  height: 46%;
  position: absolute;
  background-color: #ddd;
  top: 27%;
}
.select_cids_wrap view.active::after{
  -webkit-transform: rotate(-180deg);
  -ms-transform: rotate(-180deg);
  -o-transform: rotate(-180deg);
  transform: rotate(-180deg);
}
.select_cids {
  /* height: 100%;  */
  background-color: rgba(0, 0, 0, .18);
  position: relative;
  z-index: 10;
}
.cids_wrap {
  padding-bottom: 20rpx;
  background-color: rgba(255, 255, 255, .95);
  font-size: 24rpx;
  overflow: hidden;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  
}
.cids_wrap > view{
  float: left;
  border: 1px solid #e0e0e0;
  padding: .80rpx 16rpx;
  margin-left: 16rpx;
  margin-top: 16rpx;
  border-radius: 10rpx;
}
.cids_wrap > view.active{
  border-color: #ffd600;
  background-color: #fff9d9;
}
/* 闪送超市的商品列表 */
.product_items_wrap {
  position: absolute;
  top: 80rpx;
  left: 0;
  right: 0;
  bottom: 0;
  overflow-y: scroll;
}
.products_items {
  box-sizing: border-box;
  padding: 10rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #e0e0e0;
}
.products_items .dl {
    position: relative;
    overflow: hidden;
    width: 100%;
}
.products_items .dl .dt {
  float: left;
  width: 160rpx;
  height: 160rpx;
}
.products_items .dl .dt image {
  width: 100%;
  height: 100%;
}
.dd {
  position: absolute;
  left: 180rpx;
  right: 0;
}
.title {
  color: #000;
  top:0;
